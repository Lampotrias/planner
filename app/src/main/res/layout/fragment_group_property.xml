<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/group_prop_bottom_bg">

    <TextView
        android:id="@+id/selectCounter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textColor="@color/reply_red_400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgPalette"
            style="@style/groupPropertyImage"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_color_palette" />

        <ImageView
            android:id="@+id/imgImage"
            style="@style/groupPropertyImage"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_baseline_image_24"
            android:tint="@color/color_on_surface_emphasis_disable_alpha" />

        <ImageView
            android:id="@+id/imgEdit"
            style="@style/groupPropertyImage"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_baseline_edit_24"
            android:tint="@color/color_on_surface_emphasis_disable_alpha" />

        <ImageView
            android:id="@+id/imgBookmark"
            style="@style/groupPropertyImage"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_baseline_bookmark_24"
            android:tint="@color/color_on_surface_emphasis_disable_alpha" />

        <ImageView
            android:id="@+id/imgDelete"
            style="@style/groupPropertyImage"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_baseline_delete_24"
            android:tint="@color/color_on_surface_emphasis_disable_alpha" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
