<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface"
    android:layout_width="match_parent"
    android:minHeight="?attr/listPreferredItemHeight">

    <View
        android:id="@+id/separatorStart"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:alpha="?attr/emphasisDisabledAlpha"
        android:background="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:textAppearance="?attr/textAppearanceOverline"
        android:textColor="@color/color_on_surface_emphasis_high"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/separatorEnd"
        app:layout_constraintStart_toEndOf="@id/separatorStart"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Завтра" />

    <View
        android:id="@+id/separatorEnd"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:alpha="?attr/emphasisDisabledAlpha"
        android:background="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>